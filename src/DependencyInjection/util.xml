<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="Crehler\TpayShopwarePayment\Util\PaymentMethodUtil">
            <argument type="service" id="payment_method.repository"/>
            <argument type="service" id="rule.repository"/>
            <argument type="service" id="currency.repository"/>
        </service>

        <service id="Crehler\TpayShopwarePayment\Util\Lifecycle\ActivateDeactivate">
            <argument type="service" id="custom_field.repository"/>
            <argument type="service" id="payment_method.repository"/>
            <argument type="service" id="Crehler\TpayShopwarePayment\Util\PaymentMethodUtil"/>
        </service>

        <service id="Crehler\TpayShopwarePayment\Util\Locale\LocaleProvider">
            <argument type="service" id="language.repository"/>
        </service>

        <!-- Tpay Logger -->
        <service id="tpay_shopware_payment.util.logger" class="Monolog\Logger">
            <argument type="string">tpay_shopware_payment</argument>
        </service>

    </services>
</container>
